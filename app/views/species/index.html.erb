<div class='row index'>
  <div>
    <%= render 'opinions/menu' %>
  </div>
  
  <div class='marginLeft row'>
    <div class='wid'>
      <nav class="navbar navbar-expand-lg navl  navbar-light">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse justify-content-end mr-5" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link active " href="#"><i class="fa fa-pencil linkNav" aria-hidden="true"></i></a>
            <a class="nav-link text-light" href="#"><i class="fa fa-envelope-o linkNav" aria-hidden="true"></i></a>
            <a class="nav-link text-light" href="#"><i class="fa fa-search linkNav" aria-hidden="true"></i></a>
            <a class="nav-link text-light" href="#"><i class="fa fa-cog  linkNav" aria-hidden="true"></i></a>
            
          </div>
        </div>
      </nav>
      <div class='row  feed '>
        <div class='col-8 mx-auto text-center mt-3'>
          <a href='species/new' class='btn btn-primary mt-4"'>Share species sightings</a>
          <div class='row ml-2'>
            <% @species.each do |specie| %>
                <div class='box4'>
                  <p class='font-weight-bold text-left ml-2'><%= specie.specie.capitalize %></p>
                  <p class='font-weight-bold text-left username-grey ml-2'><%= specie.location.capitalize %></p>
                  <div class='square2'>
                    <img src="<%= specie.image %>" width='335' >
                  </div>
                  <p class='text-left  ml-2'><%= specie.date %></p>
                  <p class='text-left  ml-2'><%= specie.content %></p>
                  
                    
                </div>
            <% end %>  
          </div>
        </div> 
        <div class='whof col-4'> 
          <%= render 'opinions/who_follow' %>
        </div> 
      </div>
    </div>
        
  </div>
  
</div>  
